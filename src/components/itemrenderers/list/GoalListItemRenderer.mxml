<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	width="100%">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup id="container" width="100%" paddingLeft="5" paddingTop="5" paddingRight="5" paddingBottom="5">
		
		<s:Group width="100%" height="15">
			
			<s:Label text="{data.vital}" bottom="0" />
			
			<mx:LinkButton label="Edit" right="0" bottom="0" styleName="linkBtnDarkBlue" fontSize="12" />
			
		</s:Group>
		
		<mx:Text text="{data.comments}" width="100%" selectable="false" />
		
		<s:Line xFrom="0" xTo="205">
			<s:stroke>
				<s:SolidColorStroke color="0x4E4E4E" alpha="1" weight=".36"/>
			</s:stroke>
		</s:Line>
		
	</s:VGroup>
	
</s:ItemRenderer>
