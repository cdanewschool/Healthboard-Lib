<?xml version="1.0" encoding="utf-8"?>
<!-- http://blog.flexexamples.com/2009/07/19/setting-the-header-colors-on-the-halo-datagrid-control-in-flex-4/ -->
<s:SparkSkin 
	name="CustomDataGridHeaderBackgroundSkin"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	minWidth="21" minHeight="19">
	
	<!-- layer 2: fill -->
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="{getStyle('headerBackgroundColor')}" alpha="1" />
				<s:GradientEntry color="{getStyle('headerBackgroundColor')}" alpha="1" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
</s:SparkSkin>
